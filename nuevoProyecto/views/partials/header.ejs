<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./head.ejs') %>
<body>
    

<header class="main-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-5 col-md-2">
                <a href="/" class="main-header_home-link">
                    <img class="logo" src="/images/users/logo.JPEG">
                </a>
            </div>

            <div class="col-7 col-md-6">
                <form action="/search" method="GET" class="search-form">
                    <input type="text" name="search" placeholder="Search products, brands and more..."
                        class="search-form_input">
                    <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                </form>
            </div>

            <div class="col-12 col-md-4">
                <a class="main-header_credit-link"> "Feel safe to run"</a>
            </div>

        </div>

        <button class="btn-toggle-navbar">
            <i class="fas fa-bars"></i>
        </button>

        <nav class="main-navbar">
            <ul class="left-navbar">
                <li><a href="/">All products</a></li>
                <!-- solo logueado <li><a href="">Cargar productos</a></li> -->
            </ul>
            <ul class="right-navbar">
                <li>
                    <a href="/account/register">Create account <i class="far fa-address-card"></i></a>
                </li>
                 <% if(locals.user){ %> 
                    <%= user.email %> 
                    <% } %>  
                <li>
                    <a href="/account/login">Login <i class="fas fa-sign-in-alt"></i></a>
                </li>
            </ul>
        </nav>
    </div>
</header>
</body>

