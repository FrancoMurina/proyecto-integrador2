<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head.ejs') %>

<body>
	<!-- Header -->
	<%- include('./partials/header.ejs') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Search results</h2>
			</div>
			<% if(locals.errors){ %>
				<h2 class="products-t" style="color:red"><%=locals.errors.message  %> </h2>			
			<% } else{ %>
			<!-- Show the "ultimos" products -->
				<% for (let i=0; i<listaProducts.length; i++){%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/id/<%=listaProducts[i].id%>">
								<figure class="product-box_image">
									<img src="/images/products/<%=listaProducts[i].img%>" alt="foto zapatilla">
								</figure>
								<article class="product-box_data">
									<h2><%=listaProducts[i].productName%></h2>
									<p><%=listaProducts[i].description%></p>
									<p>From: <%=listaProducts[i].user.username%></p>
								</article>
							</a>
						</section>
					</div>
					<%}%>
					<%}%>



	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>

</html>