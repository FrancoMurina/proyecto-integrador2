<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %>
<body>
	<!-- Header -->
	
	<!-- /Header -->
	<%- include('./partials/header.ejs') %>

	<!-- product detail -->
	
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%=product.productName%></h2> 
			<p class="product-detail-description">
				<a href="/product/create">Edit</a>
			</p>
		</div>
		<div>
			<h2 class="products-title">Publicado por: <a href="/users/<%= product.user.id%>"><%= product.user.username%>  <i class="fas fa-user"></i></a></h2>
			
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%=product.img%>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%=product.description%>
						Lorem ipsum dolor, sit amet consectetur adipisicing elit. Tae ipsam amet eum, totam dolore libero illo unde? Consectetur dolorem neque
						veritatis.</p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<article>
							<img src="/images/users/fotousuario.jpeg" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/users">Maria Gonzales </a> </strong>
								 Texto del comentario que escribió el usuario</p>
							</div>
						</article>
						<article>
							<img src="https://via.placeholder.com/35" alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="/users">Username: </a> </strong>
									Texto del comentario que escribió el usuario Lorem ipsum dolor sit amet consectetur.</p>
							</div>
						</article>
					</section>
					
					<form class="form" action="" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">ADD COMMENT</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->

</body>	
</html>