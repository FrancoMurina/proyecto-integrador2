<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %>
<body>
	<!-- Header -->
	<%- include('./partials/header.ejs') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">

				<!-- ARREGLAR PARA QUE APAREZCA LA FOTO -->
				<img src="/images/users/<%=user.userimg%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">

					<% if (locals.user){%>
					<h1 class="main-title"> <%= user.username %> 
						<a href="/users/edit">
						
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<%}%>
					<a class="btn mt-3 ml-4" href="">FOLLOW</a>
				</div>
				<div>
					<ul class="">
						<li>8 products</li>
						<li>200 followers</li>
						<li>300 comments</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">My products</h2>
			</div>
			<!-- Show mis productos -->
			
			
			<% for (let i=0; i<listaProducts.length; i++){%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%=listaProducts[i].id%> ">
							<figure class="product-box_image">
								<img src="<%=listaProducts[i].imagen%>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%=listaProducts[i].nombre%></h2>
								<p><%=listaProducts[i].descripcion%></p>
								<p>Comments: <%=listaProducts[i].comentarios%></p>
							</article>
						</a>
					</section>
				</div>
				<%}%>
			
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>	
</html>